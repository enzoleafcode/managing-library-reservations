{% extends 'base.html.twig' %}

{% block title %}Book
{% endblock %}

{% block body %}
	<h1>Détail du livre</h1>

	<div class="text-center mb-4">
		<img src="{{ asset('img/livre_4300_7_03.jpg') }}" alt="Livre" class="book-image">
	</div>

	<table class="table table-book">
		<tbody>
			<tr>
				<th>Type</th>
				<td>{{ book.type }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ book.title }}</td>
			</tr>
			<tr>
				<th>Auteur</th>
				<td>{{ book.author }}</td>
			</tr>
			<tr>
				<th>Disponibilité</th>
				<td>{{ book.availability ? 'Oui' : 'Non' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_book_index') }}" class="btn btn-info">Retour à la liste des livres</a>

{% endblock %}
