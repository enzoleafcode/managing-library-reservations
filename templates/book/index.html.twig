{% extends 'base.html.twig' %}

{% block title %}üìö Liste des Livres
{% endblock %}

{% block body %}
	<h1>üìö Liste des Livres Disponibles</h1>

	<!-- filtre par Cat√©gorie -->
	<form method="get" class="mb-3">
		<label for="category">Filtrer par cat√©gorie :</label>
		<select name="category" id="category" class="form-select" onchange="this.form.submit()">
			<option value="">Toutes les cat√©gories</option>
			{% for category in categories %}
				<option value="{{ category.id }}" {% if selectedCategory == category.id %} selected {% endif %}>
					{{ category.name }}
				</option>
			{% endfor %}
		</select>
	</form>

	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Auteur</th>
				<th>Type</th>
				<th>Cat√©gorie</th>
				<th>Disponibilit√©</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for book in books %}
				<tr>
					<td>{{ book.title }}</td>
					<td>{{ book.author }}</td>
					<td>{{ book.type }}</td>
					<td>
						{% if book.categories is defined and book.categories is not empty %}
							{% for category in book.categories %}
								{{ category.name }}
								{% if not loop.last %},
								{% endif %}
							{% endfor %}
						{% else %}
							Aucune cat√©gorie
						{% endif %}
					</td>
					<td>{{ book.availability ? '‚úÖ Disponible' : '‚ùå Indisponible' }}</td>

					<td>
						<a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-info">D√©tail</a>

						{% set reserved = false %}
						{% if userReservations is defined %}
							{% for reservation in userReservations %}
								{% if reservation.books.contains(book) %}
									{% set reserved = true %}
								{% endif %}
							{% endfor %}
						{% endif %}

						{% if reserved %}
							<span class="badge bg-success">R√©serv√©</span>
							<form action="{{ path('book_cancel_reservation', {'id': book.id}) }}" method="post" class="d-inline">
								<button type="submit" class="btn btn-danger">Annuler</button>
							</form>
						{% elseif book.availability %}
							<form action="{{ path('book_reserve', {'id': book.id}) }}" method="post" class="d-inline">
								<button type="submit" class="btn btn-primary">R√©server</button>
							</form>
						{% else %}
							<span class="text-danger">Non disponible</span>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
